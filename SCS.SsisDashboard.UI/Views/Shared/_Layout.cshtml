<!DOCTYPE html>

<html>
<head>
    <title>SSIS Server Dashboard</title>
    <meta name="viewport" content="width=device-width" />
    <meta name="version" content="@typeof(SCS.SsisDashboard.UI.WebApiConfig).Assembly.GetName().Version" />
    @Styles.Render("~/content/css")
    @Styles.Render("~/content/fonts")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryBlockUI")
    @Scripts.Render("~/bundles/dataTable")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/application") 

<body>
    <div>
        <div class="row">
            <div class="col-md-4">
                <img src='@Url.Content("~/Content/Images/logo.png")' title="Company Logo" alt="Company Logo" />
            </div>
            <div class="col-md-8 app-title">
                <h1>SSIS Dashboard Version:@typeof(SCS.SsisDashboard.UI.WebApiConfig).Assembly.GetName().Version</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="mainContainer">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <div>
        <style>
            .huge
            {
                font-size: 20px;
            }

            .panel-heading
            {
                padding-left:5px;
            }

            .panel:hover
            {
                color: #808080;
                border-color: black;
            }

            .selected
            {
                color: black;
               border-color: black;
            }

            .selected-
            {
                border-right-color: white;
                border-left-color: black;
                border-top-color: black;
                border-bottom-color: white;
            }
        </style>
    </div>
</body>
</html>
